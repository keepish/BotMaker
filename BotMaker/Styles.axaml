<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Design="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls">

	<Style>
		<Style.Resources>
			<!-- Строгая монохромная палитра -->
			<Color x:Key="PrimaryColor">#1A2A3A</Color>
			<!-- Тёмный сине-угольный -->
			<Color x:Key="PrimaryLightColor">#2C3E50</Color>
			<Color x:Key="PrimaryDarkColor">#0D1B27</Color>
			<!-- Почти черный -->

			<Color x:Key="SecondaryColor">#4A5C6A</Color>
			<!-- Углубленный серый -->
			<Color x:Key="AccentColor">#3E6D9C</Color>
			<!-- Сдержанный синий -->

			<!-- Текст и фон -->
			<Color x:Key="PrimaryTextColor">#0D1B27</Color>
			<!-- Глубокий черно-синий -->
			<Color x:Key="SecondaryTextColor">#4A5568</Color>
			<!-- Тёмный серый -->
			<Color x:Key="LightTextColor">#F8FAFC</Color>
			<!-- Чистый белый -->

			<Color x:Key="BackgroundColor">#F0F4F8</Color>
			<!-- Ледяной серо-голубой -->
			<Color x:Key="CardBackground">#FFFFFF</Color>
			<Color x:Key="BorderColor">#CBD5E0</Color>
			<!-- Стальной серый -->

			<!-- Состояния -->
			<Color x:Key="SuccessColor">#2D6A4F</Color>
			<!-- Темный лесной зеленый -->
			<Color x:Key="ErrorColor">#9B2C2C</Color>
			<!-- Тёмный бордовый -->
			<Color x:Key="WarningColor">#975A16</Color>
			<!-- Темный охристый -->
			<Color x:Key="InfoColor">#2C5282</Color>
			<!-- Военно-морской синий -->
		</Style.Resources>
	</Style>

	<Design.PreviewWith>
		<Border Padding="20" Background="{DynamicResource BackgroundColor}" CornerRadius="8">
			<StackPanel Spacing="10">
				<TextBlock Text="Цветовая палитра" FontSize="18" FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryTextColor}"/>

				<Border Background="{DynamicResource PrimaryColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Основной цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Border Background="{DynamicResource SecondaryColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Второстепенный цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Border Background="{DynamicResource AccentColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Акцентный цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Button Content="Пример кнопки" Width="150"/>
				<TextBox Watermark="Пример текстового поля"/>
				<CheckBox Content="Пример чекбокса" IsChecked="True"/>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<!-- Базовые стили -->
	<Style Selector="Window">
		<Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="FontFamily" Value="Segoe UI, Inter, Arial, sans-serif"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<!-- Кнопки -->
	<Style Selector="Button">
		<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource LightTextColor}"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Padding" Value="14,6"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
	</Style>

	<Style Selector="Button:hover">
		<Setter Property="Background" Value="{DynamicResource PrimaryLightColor}"/>
	</Style>

	<Style Selector="Button:pressed">
		<Setter Property="Background" Value="{DynamicResource PrimaryDarkColor}"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<Style Selector="Button:disabled">
		<Setter Property="Background" Value="#E2E8F0"/>
		<Setter Property="Foreground" Value="#A0AEC0"/>
		<Setter Property="Cursor" Value="Arrow"/>
	</Style>

	<!-- Текстовые поля -->
	<Style Selector="TextBox">
		<Setter Property="Background" Value="{DynamicResource CardBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="10,8"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="SelectionBrush" Value="{DynamicResource PrimaryColor}40"/>
		<!-- 25% прозрачности -->
	</Style>

	<Style Selector="TextBox:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="BorderThickness" Value="1.5"/>
	</Style>

	<!-- Чекбоксы -->
	<Style Selector="CheckBox">
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="FontWeight" Value="Normal"/>
	</Style>

	<Style Selector="CheckBox:checked /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
	</Style>

	<!-- Карточки -->
	<Style Selector="Border.card">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Background" Value="{DynamicResource CardBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="16"/>
	</Style>

	<!-- Текст -->
	<Style Selector="TextBlock.header">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="Margin" Value="0,0,0,10"/>
	</Style>

	<Style Selector="TextBlock.subheader">
		<Setter Property="FontSize" Value="15"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
		<Setter Property="Margin" Value="0,0,0,8"/>
	</Style>

	<!-- Уведомления -->
	<Style Selector="Border.notification-success">
		<Setter Property="Background" Value="{DynamicResource SuccessColor}20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource SuccessColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="12"/>
	</Style>

	<Style Selector="Border.notification-error">
		<Setter Property="Background" Value="{DynamicResource ErrorColor}20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ErrorColor}"/>
		<!-- остальные свойства как у success -->
	</Style>
</Styles>