<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Design="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls">

	<Style>
		<Style.Resources>
			<Color x:Key="PrimaryColor">#000000</Color>
			<!-- Чистый черный -->
			<Color x:Key="PrimaryLightColor">#333333</Color>
			<!-- Темно-серый -->
			<Color x:Key="PrimaryDarkColor">#000000</Color>
			<!-- Черный (еще темнее) -->

			<Color x:Key="SecondaryColor">#666666</Color>
			<!-- Средний серый -->
			<Color x:Key="AccentColor">#1A1A1A</Color>
			<!-- Сверхтемный серый -->

			<!-- Текст и фон -->
			<Color x:Key="PrimaryTextColor">#000000</Color>
			<!-- Черный текст -->
			<Color x:Key="SecondaryTextColor">#444444</Color>
			<!-- Темно-серый текст -->
			<Color x:Key="LightTextColor">#FFFFFF</Color>
			<!-- Белый текст -->

			<Color x:Key="BackgroundColor">#FFFFFF</Color>
			<!-- Чистый белый фон -->
			<Color x:Key="CardBackground">#F8F8F8</Color>
			<!-- Слегка серый фон карточек -->
			<Color x:Key="BorderColor">#E0E0E0</Color>
			<!-- Очень светлый серый для границ -->

			<!-- Состояния -->
			<Color x:Key="SuccessColor">#1A3A1A</Color>
			<!-- Очень темный зеленый -->
			<Color x:Key="ErrorColor">#3A1A1A</Color>
			<!-- Очень темный красный -->
			<Color x:Key="WarningColor">#3A3A1A</Color>
			<!-- Очень темный желтый -->
			<Color x:Key="InfoColor">#1A1A3A</Color>
			<!-- Очень темный синий -->
		</Style.Resources>
	</Style>

	<Design.PreviewWith>
		<Border Padding="20" Background="{DynamicResource BackgroundColor}" CornerRadius="8">
			<StackPanel Spacing="10">
				<TextBlock Text="Цветовая палитра" FontSize="18" FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryTextColor}"/>

				<Border Background="{DynamicResource PrimaryColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Основной цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Border Background="{DynamicResource SecondaryColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Второстепенный цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Border Background="{DynamicResource AccentColor}" CornerRadius="4" Padding="10">
					<TextBlock Text="Акцентный цвет" Foreground="{DynamicResource LightTextColor}"/>
				</Border>

				<Button Content="Пример кнопки" Width="150"/>
				<TextBox Watermark="Пример текстового поля"/>
				<CheckBox Content="Пример чекбокса" IsChecked="True"/>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<Style>
		<Style.Resources>
			<FontFamily x:Key="MainFont">avares://BotMaker/Assets/Fonts/Benzin-Bold.ttf#Benzin</FontFamily>
		</Style.Resources>
	</Style>
	
	<!-- Базовые стили -->
	<Style Selector="Window">
		<Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<!-- Кнопки -->
	<Style Selector="Button">
		<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource LightTextColor}"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Padding" Value="14,6"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
	</Style>

	<Style Selector="Button:hover">
		<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource LightTextColor}"/>
	</Style>

	<Style Selector="Button:pressed">
		<Setter Property="Background" Value="{DynamicResource PrimaryDarkColor}"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<Style Selector="Button:disabled">
		<Setter Property="Background" Value="#E2E8F0"/>
		<Setter Property="Foreground" Value="#A0AEC0"/>
		<Setter Property="Cursor" Value="Arrow"/>
	</Style>

	<!-- Текстовые поля -->
	<Style Selector="TextBox">
		<Setter Property="Background" Value="{DynamicResource CardBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="10,8"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="SelectionBrush" Value="{DynamicResource PrimaryColor}40"/>
		<Setter Property="TextAlignment" Value="Center"/>
		<!-- 25% прозрачности -->
	</Style>

	<Style Selector="TextBox:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
		<Setter Property="BorderThickness" Value="1.5"/>
	</Style>

	<!-- Чекбоксы -->
	<Style Selector="CheckBox">
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="FontWeight" Value="Normal"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Left"/>
		<Setter Property="Padding" Value="5,0,0,0"/>
	</Style>

	<Style Selector="CheckBox:checked /template/ ContentPresenter">
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
	</Style>

	<!-- Карточки -->
	<Style Selector="Border.card">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Background" Value="{DynamicResource CardBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="16"/>
	</Style>

	<!-- Текст -->
	<Style Selector="TextBlock.header">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
		<Setter Property="Margin" Value="0,0,0,10"/>
	</Style>

	<Style Selector="TextBlock.subheader">
		<Setter Property="FontSize" Value="15"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
		<Setter Property="Margin" Value="0,0,0,8"/>
	</Style>

	<!-- Уведомления -->
	<Style Selector="Border.notification-success">
		<Setter Property="Background" Value="{DynamicResource SuccessColor}20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource SuccessColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="12"/>
	</Style>

	<Style Selector="Border.notification-error">
		<Setter Property="Background" Value="{DynamicResource ErrorColor}20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ErrorColor}"/>
		<!-- остальные свойства как у success -->
	</Style>
</Styles>