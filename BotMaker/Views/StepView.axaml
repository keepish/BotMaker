<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BotMaker.Views.StepView">
	<Grid RowDefinitions="Auto,*,Auto" Margin="20">
		<TextBlock Grid.Row="0"
				   Text="{Binding CurrentStep.Title}"
				   FontSize="18" FontWeight="Bold"/>

		<Grid Grid.Row="1">
			<Image Source="{Binding CurrentStep.ImagePath}"
				   Width="300" Height="300"
				   HorizontalAlignment="Center"/>
			<TextBlock Text="{Binding CurrentStep.Description}"
					   TextWrapping="Wrap"
					   Margin="0,20,0,0"/>
		</Grid>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="←" Command="{Binding PreviousStepCommand}" IsVisible="{Binding ShowPreviousButton}"/>
			<Button Content="Закрыть" Command="{Binding CloseInstructionCommand}" Margin="20,0"/>
			<Button Content="→" Command="{Binding NextStepCommand}" IsVisible="{Binding ShowNextButton}"/>
		</StackPanel>
	</Grid>
</UserControl>
